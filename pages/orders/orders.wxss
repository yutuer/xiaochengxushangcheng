/* pages/orders/orders.wxss */
.orderTitle {
  display: flex;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
}

.orderType {
  display: flex;
  justify-content: space-around;
  border-radius: 10rpx;
  width: 100%;
  padding: 0 30rpx;
}

.contentView {
  width: 100%;
  /* 1334-128(导航高度)-98(tabbar高度)-100 */
  /* height:1008rpx; */
  height: 100vh;
  margin-bottom: 100rpx;
  /* background-color: red; */
}

.oneOrder {
  background-color: gray;
  margin: 30rpx 30rpx;
  border-radius: 8rpx;
}

.oneOrder .firstLine {
  display: flex;
  justify-content: space-between;
}

.oneOrder .orderStatus {
  color: green;
}

.oneOrder .oneCargo {
  display: flex;
  justify-content: space-between;
}

.block1 {
  display: flex;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
}

