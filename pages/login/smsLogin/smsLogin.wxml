<!--pages/login/smsLogin/smsLogin.wxml-->
<view>
	<!-- 存在则显示用户信息 -->
	<view class="myDetail" wx:if="{{userInfo}}">
		<view class="hello">你好:{{userInfo.loginPhoneNum}}</view>
		<!-- 订单信息 -->
		<view class="orderInfo">
			<view class="title">
				<text>我的订单</text>
			</view>
			<view class="infoContent">
				<tipButton-cmp txt="待支付" fontSize="30" imgSrc="images/add.png" imgWidth="120" imgHeight="120" containerWidth="160" bind:imgClickEvent="click1" />
				<tipButton-cmp txt="进行中" fontSize="30" imgSrc="images/add.png" imgWidth="120" imgHeight="120" containerWidth="160" bind:imgClickEvent="click2" />
				<tipButton-cmp txt="已完成" fontSize="30" imgSrc="images/add.png" imgWidth="120" imgHeight="120" containerWidth="160" bind:imgClickEvent="click3" />
				<tipButton-cmp txt="全部订单" fontSize="30" imgSrc="images/add.png" imgWidth="120" imgHeight="120" containerWidth="160" bind:imgClickEvent="click4" />
			</view>
		</view>
		<!-- 服务 -->
		<view class="orderInfo">
			<view class="title">
				<text>我的服务</text>
			</view>
			<view class="infoContent">
				<tipButton-cmp txt="收货地址" fontSize="30" imgSrc="images/add.png" imgWidth="120" imgHeight="120" containerWidth="160" bind:imgClickEvent="click11" />
				<tipButton-cmp txt="客服帮助" fontSize="30" imgSrc="images/add.png" imgWidth="120" imgHeight="120" containerWidth="160" bind:imgClickEvent="click12" />
			</view>
		</view>
		<button class="loginOut" type="primary" bindtap="loginOutTap">登 出</button>
	</view>
	<!-- 不存在则登录 -->
	<view wx:else>
		<!-- 输入手机号 -->
		<view class='phoneNameInput inputSuperView'>
			<input class='pswInput' placeholder='请输入手机号' type='number' bindinput="phoneNumInput"></input>
			<view class='subBtnView' bindtap='yzmClick'>获取验证码</view>
		</view>
		<!-- 验证码 -->
		<input class='input yzmInput' placeholder='请输入收到的验证码' type='number'></input>
		<!-- 登录按钮 -->
		<view class='loginView' bindtap="loginTap">登 录</view>
		<!-- 手机快速注册 -->
		<view class='phoneRegist font28' bindtap='phoneRegistClick'>手机快速注册</view>
		<!-- 同意协议 -->
		<view class='protocol font28'>登录即代表您已同意<text>京东隐私政策</text></view>
	</view>

