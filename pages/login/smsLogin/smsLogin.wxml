<!--pages/login/smsLogin/smsLogin.wxml-->
<block>
	<!-- 存在则显示用户信息 -->
	<view class="myDetail" wx:if="{{userInfo}}">
		<view class="hello">你好:{{userInfo.loginPhoneNum}}</view>
		<view class="orders" catchtap="ordersTap">我的订单</view>
		<view class="address" catchtap="addressTap">地址管理</view>
		<button class="loginOut" type="primary" bindtap="loginOutTap">登 出</button>
	</view>

	<!-- 不存在则登录 -->
	<view wx:else>
		<!-- 输入手机号 -->
		<view class='phoneNameInput inputSuperView'>
			<input class='pswInput' placeholder='请输入手机号' type='number' bindinput="phoneNumInput"></input>
			<view class='subBtnView' bindtap='yzmClick'>获取验证码</view>
		</view>
		<!-- 验证码 -->
		<input class='input yzmInput' placeholder='请输入收到的验证码' type='number'></input>
		<!-- 登录按钮 -->
		<view class='loginView' bindtap="loginTap">登 录</view>
		<!-- 手机快速注册 -->
		<view class='phoneRegist font28' bindtap='phoneRegistClick'>手机快速注册</view>
		<!-- 同意协议 -->
		<view class='protocol font28'>登录即代表您已同意<text>京东隐私政策</text></view>
	</view>

	<button bindtap="test">testAddYouhuiquan</button>
	<view>
		<input bindblur="testName" value="送香蕉" placeholder="优惠券名称"></input>
		<input bindblur="testDesc" value="满100送1斤香蕉" placeholder="赠送说明"></input>
		<input type="digit" bindblur="testNeedMoney" value="100.00" placeholder="优惠满足条件(合计金额, 精确到xx)"></input>
		<input bindblur="testStartTime" value="2020-8-8 10:00:00" placeholder="开始时间(年-月-日 时:分:秒)"></input>
		<input bindblur="testEndTime" value="2020-10-10 10:10:10" placeholder="结束时间(年-月-日 时:分:秒)"></input>
	</view>
</block>