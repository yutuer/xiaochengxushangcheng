/* pages/login/smsLogin/smsLogin.wxss */
@import '/weui-miniprogram/weui-wxss/dist/style/weui.wxss'

.container {
    width: 100%;
    overflow-x: hidden;
    height: 100vh;
    background-color: #f5f6f7;
    /*
    块状元素加了flex后, 会被转成行内元素 inline-block
    行内元素是不能加宽高的, 所以要用inline-block
    */
    /* display: inline-block; */

    /*display: flex;*/
    /*flex-direction: column;*/
}

.loginOut {
    margin: 0 40rpx;
    margin-top: 100rpx;
    height: 80rpx;
    width: 90%;
}

/* 输入账户 */
.phoneNameInput {
    position: relative;
    top: 40rpx;
}

.phoneNameInput .pswInput {
    height: 70rpx;
    width: 500rpx;
}

/* 验证码 */
.yzmInput {
    position: relative;
    top: 80rpx;
}

/* 手机快速注册 */
.phoneRegist {
    display: inline-block;
    position: absolute;
    top: 420rpx;
    right: 40rpx;
}

.itemContainer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    background-color: #999999;
}

.choose {
    width: 40rpx;
    height: 40rpx;
}

.out-container {
    /*display: flex;*/
    /*flex-direction: row;*/
    /*justify-content: space-between;*/
}

.chunk {
    /* 这里的100%, 只是inline-block平分后的宽度, 而不是原来的块的宽度 */
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
}

.r {
    background-color: red;
    display: flex;
}

.r text {
    width: 200rpx;
}

.g {
    background-color: green;
}

.b {
    background-color: blue;
}

.sky {
    background-color: skyblue;
}

.myDetail {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 10rpx;
}

.hello {
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    width: 100%;
}

.hello text {
    font-size: 34rpx;
    line-height: 34rpx;
}

.orderInfo {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /*justify-content: flex-start;*/
    height: 300rpx;
    width: 100%;
    margin-bottom: 20rpx;
    background-color: #ffffff;
}

.orderInfo .title {
    width: 100%;
    padding-left: 20rpx;
    font-size: 36rpx;
    line-height: 36rpx;
}

.orderInfo .infoContent {
    display: flex;
    align-items: center;
    height: 200rpx;
    width: 100%;
}