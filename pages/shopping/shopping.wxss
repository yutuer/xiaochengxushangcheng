/* pages/shopping/shopping.wxss */
/* 购物车内容 */
.contentView {
    width: 100%;
    /* 1334-128(导航高度)-98(tabbar高度)-100 */
    /* height:1008rpx; */
    height: 90vh;
    margin-bottom: 100rpx;
    /* background-color: red; */
}

/* 店铺标题 */
.contentView .titleView {
    /*顶部线条样式*/
    border-top: 40rpx solid #F7F7F7;
    /*底部线条样式*/
    border-bottom: 4rpx solid #e2e2e2;
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    /* background-color: yellow; */
}

.contentView .titleView .titleImv {
    margin: 0 40rpx;
    width: 40rpx;
    height: 40rpx;
}

.contentView .titleView .shopName {
    font-size: 34rpx;
    color: #000000;
}

/* 单个商品样式 */
.contentView .itemView {
    display: flex;
    align-items: center;
    justify-content: space-around;
    height: 260rpx;
}

.contentView .itemView .choose {
    /* position: absolute;
    left: 40rpx;
    top: 110rpx; */
    width: 40rpx;
    height: 40rpx;
    /* (260-40)*0.5 */
}

.contentView .itemView .outer {
    /* display: flex;
    width: 80%; */
}

.contentView .itemView .icon {
    /* position: absolute;
    left: 120rpx; */
    /* width: 200rpx;
    height: 200rpx;
    background-color: #e2e2e2; */
}

.contentView .itemView .righter {
    /* display: flex;
    flex-direction: column; */
}

.contentView .itemView .detail {
    position: absolute;
    left: 340rpx;
    top: 20rpx;
    right: 20rpx;
    height: 80rpx;
    line-height: 40rpx;
    /*限制2行*/
    -webkit-line-clamp: 2;
    line-clamp: 2;
    /* 文字超出部分变成省略号 */
    overflow: hidden;
    text-overflow: -o-ellipsis-lastline;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

/* 底部工具栏 */
.bottomView {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 10vh;
    background-color: #ffffff;
    border-top: 1px solid #EDEDED;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* 选择按钮图片 */
.bottomView .chooseImv {
    position: absolute;
    left: 40rpx;
    top: 30rpx;
    width: 40rpx;
    height: 40rpx;
}

.price-container {
    position: absolute;
    top: 0;
    right: 220rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    width: 260rpx;
    height: 100%;
}

.bottomView .priceTxt {
    /*让文字垂直居中*/
    /* 设置字体样式 */
    font-size: 32rpx;
    font-weight: bolder;
    color: #000000;
    display: flex;
}

.bottomView .countNum {
    position: absolute;
    top: 0;
    right: 0;
    width: 200rpx;
    height: 100%;
    background-color: red;
    /* 设置字体样式 */
    font-size: 32rpx;
    color: #ffffff;
    /*让文字垂直水平居中*/
    line-height: 100rpx;
    text-align: center;
}

.youhuiquanShow {
    font-weight: 999;
}

