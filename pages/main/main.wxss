/* pages/main/main.wxss */
.out {
    display: flex;
    justify-content: center;
}

.container {
    display: flex;
    flex-direction: column;
    width: 98%;
    align-items: center;
}

/* 顶部搜索 */
.searchView {
    position: fixed;
    background-color: #ffffff;
    height: 100rpx;
    width: 100%;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3px 0 #e3e3e3;
    z-index: 99;
}

.box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #f5f5f5;
    height: 34px;
    width: 700rpx;
    color: #999999;
}

.box image {
    margin-right: 10px;
    width: 14px;
    height: 14px;
    margin-bottom: -2px;
}

/* 顶部banner图 */
.bannerView {
    width: 100%;
    height: 300rpx;
    margin-top: 100rpx;
    /* background-color: red; */
}

.bannerView image {
    width: 100%;
    height: 100%;
    background-color: #999999;
}

/* 类别item */
.itemView {
    margin-top: 40rpx;
    width: 100%;
    /*140*2+40*/
    height: 350rpx;
    display: flex;
    flex-wrap: wrap;
}

/* 单个Item */
.itemView .item {
    display: inline-block;
    /*(750-(40*6))/5*/
    width: 102rpx;
    height: 140rpx;
    margin-left: 40rpx;
    /* background-color: yellow; */
}

/* 类别文字 */
.itemView .item .titleView {
    width: 102rpx;
    text-align: center;
    font-size: 24rpx;
    color: #000000;
}

.youhuiquan {
    width: 100%;
    height: 230rpx;
}

/* 猜你喜欢标题 */
.cnxhTitle {
    width: 100%;
    line-height: 70rpx;
    padding-left: 40rpx;
    /* 设置字体样式 */
    font-size: 34rpx;
    font-weight: bolder;
    color: #000000;
    /* background-color: red; */
}

.itemContainer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    background-color: #e4e4e4;
    padding: 0 12rpx;
}

.mainPageItem {
    margin-bottom: 20rpx;
}

.detailView {
    display: inline-block;
    border: 1px solid #eaeaea;
    box-sizing: border-box;
    width: 375rpx;
    height: 520rpx;
    /*375+105+40*/
    /* background-color: yellow; */
}

.detailView .detailImv {
    width: 375rpx;
    height: 375rpx;
    background-color: #999999;
}

.detailView .detailTxt {
    width: 375rpx;
    /* 设置文字样式 */
    font-size: 28rpx;
    color: #000000;
    /*限制2行*/
    -webkit-line-clamp: 2;
    line-clamp: 2;
    /* 文字超出部分变成省略号 */
    overflow: hidden;
    text-overflow: -o-ellipsis-lastline;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.detailView .priceTxt {
    color: red;
    font-size: 34rpx;
}

.typeView {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.typeView .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 0;
    width: 25%;
}

.typeView .item .titleView {
    text-align: center;
}

.typeView .item .iconView {
    width: 90rpx;
    height: 90rpx;
    background-color: #eaeaea;
    border-radius: 51rpx;
}