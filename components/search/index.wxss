.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.search {
    display: flex;
    flex-direction: column;
    width: 100%;
    position: fixed;
}

.header {
    background-color: #ffffff;
    /*position: fixed;*/
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    align-items: center;
    z-index: 99;
    justify-content: center;
    /* padding-left:15px;  */
    /* padding-right:5px; */
}

.search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    margin-left: 20rpx;
    /* margin-left: */
}

.icon {
    width: 14px;
    height: 14px;
    margin-left: 12px;
    margin-right: 8px;
}

.cancel-img {
    width: 18px;
    height: 18px;
    margin-right: 10px;
}

.in-bar {
    color: #999;
}

.bar {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    display: inline-block;
    height: 34px;
    /* width:100%; */
    width: 500rpx;
    font-size: 14px;
}

.cancel {
    line-height: 34px;
    width: 60px;
    /* margin-left:10px; */
    text-align: center;
    display: inline-block;
    border: none;
}

.items-container {
    padding: 0 12rpx;
    /*background-color: #e4e4e4;*/
    margin-top: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
}

.mainPageItem {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
}

.searchResult {
    width: 100%;
    height: 90vh;
}

.searchItem {
    display: block;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    padding-left: 14rpx;
    border-bottom: 1rpx groove blanchedalmond;
}